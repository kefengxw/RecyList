<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_flag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/item_image_country_top_bottom_margin"
        android:layout_marginBottom="@dimen/item_image_country_top_bottom_margin"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="h,1:1" />
        <!--android:src="@drawable/ic_flag_gb"-->

    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/item_text_country_left_right_margin"
        android:layout_marginRight="@dimen/item_text_country_left_right_margin"
        android:layout_weight="16"
        android:gravity="center|start"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/item_text_country_text_size" />
        <!--android:text="@string/item_country_name"-->
        <!--android:textStyle="bold"-->
</LinearLayout>